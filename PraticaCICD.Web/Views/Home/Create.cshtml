@model RoupaViewModel
@{
}

<form class="row" asp-action="Create" method="post">
    <div class="col-md-6">
        <div class="form-group">
            <label>Tipo</label>
            <input class="form-control" type="text" asp-for="Tipo" />
        </div>
        <div class="form-group">
            <label>Tamanho</label>
            <input class="form-control" type="text" asp-for="Tamanho" />
        </div>
        <div class="form-group">
            <label>Preço</label>
            <input class="form-control" type="number" step="0.01" asp-for="Preco" />
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-sm btn-danger">Voltar</a>
        <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
    </div>
</form>